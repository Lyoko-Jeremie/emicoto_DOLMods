        "replace":"<<set _housekeepingConfig =\t{ name : \"家务\",displayType : \"grade\",\tcurrentValue : $housekeeping,\t\tmodifier: 100, modTypes: { good: [], bad: [] },\t\tstates : _detailedSkillGrades}>>\n\t\t\t\t<<set _mechanicConfig = \t{ name : lanSwitch('Mechanic','机械'),\tdisplayType : \"grade\",\tcurrentValue : $mechanic,\t\tmodifier: 100, modTypes: { good: [], bad: [] },\t\tstates : _detailedSkillGrades}>>"   
    },
    {
        "passage":"Characteristics",
        "findString" :"<<characteristic-box _housekeepingConfig>>\n",
        "replace":"<<characteristic-box _housekeepingConfig>>\n\t\t\t<<characteristic-box _mechanicConfig>>\n"   
